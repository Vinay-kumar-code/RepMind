<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include the database in cloud backups -->
        <include domain="database" path="."/>
        <!-- Exclude temporary files -->
        <exclude domain="cache" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include the database in device transfers -->
        <include domain="database" path="."/>
        <!-- Exclude temporary files -->
        <exclude domain="cache" path="."/>
    </device-transfer>
</data-extraction-rules>
